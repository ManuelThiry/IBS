@page
@using IBS_Europe.App.Resources
@model IBS_Europe.App.Pages.Login

@{
    ViewData["Title"] = SharedResource.C_Title;
}

<section class="container" style="margin-top: 5%;">
    <div class="row justify-content-center">
        <div class="col-md-8"> <!-- Augmenter la largeur du formulaire -->
            <div class=" shadow-lg">
                <div class="card-header bg-midnight text-white text-center">
                    <h4 class="mb-0">@SharedResource.C_Title</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group mb-4">
                            <label for="identifier" class="form-label fs-5">@SharedResource.C_User</label>
                            <input type="text" class="form-control form-control-lg" id="identifier" asp-for="Input.Identifier" placeholder="@SharedResource.C_UserP" />
                            <span asp-validation-for="Input.Identifier" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label for="password" class="form-label fs-5">@SharedResource.C_Password</label>
                            <input type="password" class="form-control form-control-lg" id="password" asp-for="Input.Password" placeholder="@SharedResource.C_PasswordP" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group d-grid">
                            <button type="submit" class="button-1">@SharedResource.C_Login</button>
                        </div>
                        <div class="form-group mt-3">
                            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                            {
                                <div class="alert alert-danger">@Model.ErrorMessage</div>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>