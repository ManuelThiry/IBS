@using IBS_Europe.App.Resources
@model Partners.AddPartnerModel

<div class="modal fade" id="addPartnerModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="addPartnerLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" enctype="multipart/form-data" asp-page-handler="Add">
            <div class="modal-header text-white bg-midnight">
                <h5 class="modal-title" id="addPartnerLabel">@SharedResource.MAPa_Title</h5>
                <button type="submit" name="action" value="cancel" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Formulaire pour ajouter un partenaire -->
                <div class="mb-3">
                    <label for="partnerName" class="form-label">@SharedResource.MA_Name</label>
                    <input type="text" class="form-control" id="partnerName" name="Name" value="@Model.Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="partnerWebsite" class="form-label">@SharedResource.MAP_Website</label>
                    <input type="text" class="form-control" id="partnerWebsite" name="Website" value="@Model.WebSite">
                    <span asp-validation-for="WebSite" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="partnerImage" class="form-label">@SharedResource.MAP_Logo</label>
                    <input type="file" class="form-control" id="partnerImage" name="Picture" accept=".png, .jpeg, .jpg">
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
                <div class="modal-footer">
                    <button type="submit" name="action" value="cancel" class="btn btn-secondary" data-bs-dismiss="modal">@SharedResource.MA_Cancel</button>
                    <button type="submit" name="action" class="btn btn-primary">@SharedResource.MA_Add</button>
                </div>
                
            </div>
            </form>
        </div>
    </div>
</div>
